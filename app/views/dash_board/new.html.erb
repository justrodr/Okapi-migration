<script type="text/javascript">
$(document).ready(function(){
	// Activate tooltip
	$('[data-toggle="tooltip"]').tooltip();
	
	// Select/Deselect checkboxes
	var checkbox = $('table tbody input[type="checkbox"]');
	$("#selectAll").click(function(){
		if(this.checked){
			checkbox.each(function(){
				this.checked = true;                        
			});
		} else{
			checkbox.each(function(){
				this.checked = false;                        
			});
		} 
	});
	checkbox.click(function(){
		if(!this.checked){
			$("#selectAll").prop("checked", false);
		}
	});
});
</script> %>


<body>
<!-- Page Content -->
<div class="d-flex" id="wrapper">
<%= render 'shared/navbar' if session[:log] == 1%>
    <div id="page-content-wrapper">
      <div class="container-fluid">
        <div class="container">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
						<h2>Properties</h2>
					</div>
                    <!---- Start of edit/delete pop ups ------>
					<div class="col-sm-6">
						<a href="#addPropertyModal" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Add New Property</span></a>
						<a href="#deletePropertyModal" class="btn btn-danger" data-toggle="modal"><i class="material-icons">&#xE15C;</i> <span>Delete</span></a>						
					</div>
                    <!---- End of edit/delete pop ups ------>
                </div>
            </div>

            <table class="table table-striped table-hover">
                <thead>
                    <tr> <!---- Display elements/titles in a single row ------>
						<th>
							<span class="custom-checkbox">
								<input type="checkbox" id="selectAll">
								<label for="selectAll"></label>
							</span>
						</th>
                        <!--<th>Property Name</th>-->
                        <th>Address</th>
                        <!-- Address and Nickname will go in this column-->
                        <!--If there is no nickname, just display address-->
                        <!--If there is nickname: Nickname -->
                        <!--                      Address -->
						<%# <th>Tenant Name</th> %>
						<th>Tenant</th>
						<!--Tenant info goes in here: Tenant Name and email address-->
                        <th>Delivery Status</th>
                        <!--Delivery status goes here: Semicircle timer counting down till next ship -->
                        <!--If package has shipped & not delivered: Shipped: Date -->
                        <!--If package has shipped and delivered:   Last Delivered: Date-->
                        <!--Pause delivery button-->
                        <!--<th>Date last delivered</th>-->
                        <!--<th>Days until next order<th>-->
                        <th>Actions</th>
                        <!--Edit and Details-->
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <% Property.where(user: User.find_by(email: session[:email])).each do |f| %>
                            <tr>
                                <!---- Display checkboxes ------>
                                <td>
							        <span class="custom-checkbox">
								        <input type="checkbox" id="checkbox1" name="options[]" value="1">
								        <label for="checkbox1"></label>
							        </span>
						        </td>
                                <!---- End display checkboxes ------>

                                <!---- Property Attributes ------>
                                <td><%= f.prop_name %></td>
                                <td><%= f.address %></td>
                                
                                <td>(last sent nil)</td> 
                                <td>(last delivered nil)</td>
                                <td>(days until nil)</td>
                               
                                <td><%= f.last_delivered%></td>
                                <!---- End property attributes ------>

                                <!---- Display action buttons ------>
                                <td>
                                    <a href="#viewPropertyModal" class="view" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE8F4;</i></a>
                                    <a href="#editPropertyModal" class="edit" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
                                    <%# <a href="#deletePropertyModal" class="delete" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a> %>
                                </td>
                                <!---- Display action buttons ------>
                            </tr>
                        <% end %>
                    </tr>       
                </tbody>
            </table>


			<div class="clearfix">
                <%# <div class="hint-text">Showing <b>5</b> out of <b>25</b> entries</div> %>
                <ul class="pagination">
                    <li class="page-item disabled"><a href="#">Previous</a></li>
                    <li class="page-item"><a href="#" class="page-link">1</a></li>
                    <li class="page-item"><a href="#" class="page-link">2</a></li>
                    <%# <li class="page-item active"><a href="#" class="page-link">3</a></li>
                    <li class="page-item"><a href="#" class="page-link">4</a></li>
                    <li class="page-item"><a href="#" class="page-link">5</a></li> %>
                    <li class="page-item"><a href="#" class="page-link">Next</a></li>
                </ul>
            </div>
        </div>

	<!-- Add Modal HTML -->
	<div id="addPropertyModal" class="modal fade">
		<div class="modal-dialog">
			<div class="modal-content">
			
					<div class="modal-header">						
						<h4 class="modal-title">Add Property</h4>
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					</div>
					<div class="modal-body">					
						<%= form_for(@property, url: property_path) do |f| %>
    					
    					<%= f.text_field :address, class: "form-control", placeholder: "Property Address", required: true%> 
						<%= f.text_field :tenant_name, class: "form-control", placeholder: "Tenant Name", required: true%> 
						<%= f.text_field :tenant_email, class: "form-control", placeholder: "Tenant Email", required: true%> 
						<%= f.text_field :prop_name, class: "form-control", placeholder: "Property Name (Optional)", required: false%> 
						<!--<%= f.text_field :frequency, class: "form-control", placeholder: "Air Filter Delivery Frequency (Months)(Optional)", required: false%> -->

						<div class="modal-footer">
						<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
						<%= f.submit "Add Property", class: "btn btn-primary btn-block btn-lg" %>
						</div>

						<% end %>
	

					</div>
					

			</div>
		</div>
	</div>

    <!-- View Details Modal HTML -->
	<div id="viewPropertyModal" class="modal fade">
		<div class="modal-dialog">
			<div class="modal-content">
				<form>
					<div class="modal-header">						
						<h4 class="modal-title">View Property</h4>
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					</div>
					<div class="modal-body">					
						<div class="form-group">
							<label>Name</label>
							<input type="text" class="form-control" required>
						</div>
						<div class="form-group">
							<label>Email</label>
							<input type="email" class="form-control" required>
						</div>
						<div class="form-group">
							<label>Address</label>
							<textarea class="form-control" required></textarea>
						</div>
						<div class="form-group">
							<label>Phone</label>
							<input type="text" class="form-control" required>
						</div>					
					</div>
					<div class="modal-footer">
						<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
						<input type="submit" class="btn btn-info" value="Save">
					</div>
				</form>
			</div>
		</div>
	</div>
    
	<!-- Edit Modal HTML -->
	<div id="editPropertyModal" class="modal fade">
		<div class="modal-dialog">
			<div class="modal-content">
				<form>
					<div class="modal-header">						
						<h4 class="modal-title">Edit Property</h4>
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					</div>
					<div class="modal-body">					
						<div class="form-group">
							<label>Name</label>
							<input type="text" class="form-control" required>
						</div>
						<div class="form-group">
							<label>Email</label>
							<input type="email" class="form-control" required>
						</div>
						<div class="form-group">
							<label>Address</label>
							<textarea class="form-control" required></textarea>
						</div>
						<div class="form-group">
							<label>Phone</label>
							<input type="text" class="form-control" required>
						</div>					
					</div>
					<div class="modal-footer">
						<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
						<input type="submit" class="btn btn-info" value="Save">
					</div>
				</form>
			</div>
		</div>
	</div>

	<!-- Delete Modal HTML -->
	<div id="deletePropertyModal" class="modal fade">
		<div class="modal-dialog">
			<div class="modal-content">
				<form>
					<div class="modal-header">						
						<h4 class="modal-title">Delete Property</h4>
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
						<% Property.where(user: User.find_by(email: session[:email])).each do |prop| %>
							<%= form_for(prop, url: "property/delete/#{prop.id}", method: :delete) do |f| %>
							<%= f.submit "Delete Property #{prop.prop_name}", class: "btn btn-primary btn-block btn-lg" %>
							<% end %>
						<% end %>
					</div>
					<div class="modal-body">					
						<p>Are you sure you want to delete this property?</p>
						<p class="text-warning"><small>This action cannot be undone.</small></p>
					</div>
					<div class="modal-footer">
						<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
						<input type="submit" class="btn btn-danger" value="Delete">
					</div>
				</form>
			</div>
		</div>
	</div>
      </div>
    </div>
</div>
