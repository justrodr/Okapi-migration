<body onload="move()">

<!-- Page Content -->
<div class="d-flex" id="wrapper">
<%= render 'shared/navbar' if session[:log] == 1%>
    <div id="page-content-wrapper">
      <div class="container-fluid">
        <div class="container">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
						<h2>Properties</h2>
					</div>
                    <!---- Start of add modal ------>
					<div class="col-sm-6">
						<a href="#addPropertyModal" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Add New Property</span></a>
						<%# <a href="#deletePropertyModal" class="btn btn-danger" data-toggle="modal"><i class="material-icons">&#xE15C;</i> <span>Delete</span></a>						 %>
					</div>
                    <!---- End of add modal ------>
                </div>
            </div>

            <!---- Start of property table headers ------>
			<table class="table table-striped table-hover">
                <thead>
                    <tr> 
                        <th class="px-5">Address</th>
						<th>Tenant</th>
                        <th>Delivery Status</th>
                        <th class="pr-5">Actions</th>
						<th></th>
                    </tr>
                </thead>
				<!---- End of property table headers ------>

				<!-- Start of property table -->
                <tbody>
                    <tr>
                        <% Property.where(user: User.find_by(email: session[:email])).each do |prop| %>
                                <!---- Property Attributes ------>
                                <td><%= prop.prop_name %><br><%= prop.address %></td>
                                
                                <td>(Tenant info)</td>

                                <td>
                                	<div id="myProgress">
  										<div id="myBar"></div>
									</div>
									<a id="setup">Set Up Automatic Delivery</a>
									<!--<button onclick="move()">Click Me</button> -->
									<br>
									<script>
										function move() {
										  var elem = document.getElementById("myBar");   
										  var width = 1;
										  var id = setInterval(frame, 10);
										  function frame() {
										    if (width >= 100) {
										      clearInterval(id);
										    } else {
										      width++; 
										      elem.style.width = width + '%'; 
										    }
										  }
										}
									</script>
									<div>
										<p>(last sent nil / last delivered nil)</p>
									</div>
								</td>
                   
                                <!---- End property attributes ------>

                                <!---- Display action buttons ------>
								<td>
									<div class="float-left">
										<%= link_to '<i class="material-icons" style="font-size:25px;color:#1da1f2;padding-right:10px">edit</i>'.html_safe, edit_property_path(prop), method: :get, class: "float-left", id: "edit#{prop.prop_name}" %>
										<%= link_to '<i class="material-icons" style="font-size:25px;color:#fbbe19;padding-right:10px">visibility</i>'.html_safe, property_path(prop), method: :get, class: "float-left", id: "view#{prop.prop_name}" %>
										<%= link_to '<i class="material-icons" style="font-size:25px;color:#dc3545;padding-right:10px">delete</i>'.html_safe, property_path(prop), method: :delete, class:"float-left",id: "delete#{prop.prop_name}", data: { confirm: "Are you sure you want to delete this property? \nThis action cannot be undone."} %>
									</div>
								</td>
								<!---- End display action buttons ------>
                        <td></td>
                    </tr> 
					<% end %>      
                </tbody>
            </table>
			<!-- End of Property Table-->

	
<!-- Edit Modal HTML -->
<div id="editPropertyModal", class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
				<div class="modal-header">						
					<h4 class="modal-title">Edit Property</h4>
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				</div>
				
				<div class="modal-body">
					
					
				</div>
				<div class="modal-footer">
					<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
					<input type="submit" class="btn btn-info" value="Save">
				</div>
		</div>
	</div>
</div>

	<!-- Add Modal HTML -->
	<div id="addPropertyModal" class="modal fade">
		<div class="modal-dialog">
			<div class="modal-content">
			
					<div class="modal-header">						
						<h4 class="modal-title">Add Property</h4>
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					</div>

					<div class="modal-body">					
						<%= form_for(@property, url: properties_path) do |f| %>
							<%= f.text_field :address, class: "form-control", placeholder: "Property Address", required: true%> 
							<%= f.text_field :city, class: "form-control", placeholder: "City", required: true%> 
							<%= f.text_field :state, class: "form-control", placeholder: "State", required: true%> 
							<%= f.text_field :zipcode, class: "form-control", placeholder: "Zip Code", required: true%> 
							<%= f.text_field :tenant_name, class: "form-control", placeholder: "Tenant Name", required: true%> 
							<%= f.text_field :tenant_email, class: "form-control", placeholder: "Tenant Email", required: true%> 
							<%= f.text_field :prop_name, class: "form-control", placeholder: "Property Name (Optional)", required: false%> 
							<!--<%= f.text_field :frequency, class: "form-control", placeholder: "Air Filter Delivery Frequency (Months)(Optional)", required: false%> -->

							<div class="modal-footer">
								<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
								<%= f.submit "Add Property", class: "btn btn-primary btn-block btn-md" %>
							</div>
						<% end %>
					</div>
			</div>
		</div>
	</div>

    <!-- View Details Modal HTML -->
	<div id="viewPropertyModal" class="modal fade">
		<div class="modal-dialog">
			<div class="modal-content">
				<form>
					<div class="modal-header">						
						<h4 class="modal-title">View Property</h4>
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					</div>
					<div class="modal-body">					
						<div class="form-group">
							<label>Name</label>
							<input type="text" class="form-control" required>
						</div>
						<div class="form-group">
							<label>Email</label>
							<input type="email" class="form-control" required>
						</div>
						<div class="form-group">
							<label>Address</label>
							<textarea class="form-control" required></textarea>
						</div>
						<div class="form-group">
							<label>Phone</label>
							<input type="text" class="form-control" required>
						</div>					
					</div>
					<div class="modal-footer">
						<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
						<input type="submit" class="btn btn-info" value="Save">
					</div>
				</form>
			</div>
		</div>
	</div>

	<!-- Delete Modal HTML -->
	<div id="deletePropertyModal" class="modal fade">
		<div class="modal-dialog">
			<div class="modal-content">
					<div class="modal-header">						
						<h4 class="modal-title">Delete Property</h4>
						<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
						
					</div>
					<div class="modal-body">					
						<p>Are you sure you want to delete this property?</p>
						<p class="text-warning"><small>This action cannot be undone.</small></p>
					</div>
					<div class="modal-footer">
						<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
						<input type="submit" class="btn btn-danger" value="Delete">
					</div>
			</div>
		</div>
	</div>
	
      </div>
    </div>
</div>
</body>
    <!-- /#page-content-wrapper -->
</div>
