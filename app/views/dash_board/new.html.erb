						<%= form_for(prop, url: "property/edit/#{prop.id}", method: :get) do |f| %>
						<%= f.submit "Edit Property #{prop.prop_name}", class: "btn btn-primary btn-block btn-lg" %>
						<% end %>
					<% end %>
</body>
    <!-- /#page-content-wrapper -->
</div>
