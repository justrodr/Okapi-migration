
<body>
 <div class="container">
  <div class="row">
    <div class="col-lg-10 col-xl-9 mx-auto">
      <div class="card card-signin flex-row my-5 animated fadeInUp">
        <div class="card-img-left d-none d-md-flex">
          <!-- Background image for card set in CSS! -->
        </div>
        <div class="card-body">
            <h5 class="card-title text-center">Sign Up</h5>
    
            <%= form_for(@user) do |f| %>
        
              <div class="form-group">
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-user-circle"></i></span>
                    <%= f.text_field :first_name,
                    class: "form-control", 
                    placeholder: "First Name",
                    required: true %>
                </div>    
              </div>    

            
              <div class="form-group">
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-user-circle"></i></span> 
                  <%= f.text_field :last_name,
                  class: 'form-control', 
                  placeholder: "Last Name",
                  required: true %>
                </div>
              </div>

              <div class="form-group">
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-paper-plane"></i></span>  
                    <%= f.email_field :email, 
                    class: 'form-control', 
                    placeholder: "Email Address",
                    required: true %>
                </div>
              </div>  

               <hr>

              <div class="form-group">
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                  <%= f.password_field :password, 
                  class: 'form-control', 
                  placeholder: "Password",
                  required: true %>
                </div>
              </div>  
            
            
              <div class="form-group">
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-lock"></i><i class="fa fa-check"></i></span>
                  <%= f.password_field :password_confirmation, 
                  class: 'form-control', 
                  placeholder: "Confirm Password",
                  required: true%>
                </div>
              </div>
            
              <%= f.submit "Sign Up", class:"btn btn-primary btn-block btn-lg" %>
            <% end %>
  
          <br>
          <%# <div class="text-center">Already have an account? <a href="#">Login here</a></div> %>
          <div class="text-center">
            <%="Already have an account?" %>
            <%= link_to "Login here.", '/login'%> 
          </div>
        <br>  
</body>

