<link href="https://fonts.googleapis.com/css?family=Bitter|Bree+Serif|Roboto+Condensed|Source+Serif+Pro" rel="stylesheet">
<body id="splashscreen_body">
  
  <header class="splashscreen_header">
    <div class="title">
      <% provide(:title, "Splash Screen") %>
      <h1>okapi home management</h1>
    </div>
    <ul class="menu">
      <li>
        <%= form_for(:anything, url: '/login', method: :get ) do |f| %>
          <%= f.submit "Login", class: "btn btn-secondary_h" %>
        <% end %>
      </li>
      <li>
        <%= form_for(:anything, url: '/home_page', method: :get ) do |f| %>
          <%= f.submit "About", class: "btn btn-secondary_h" %>
        <% end %>
      </li>
      <li>
        <%= form_for(:anything, url: '/contact', method: :get ) do |f| %>
          <%= f.submit "Contact", class: "btn btn-secondary_h" %>
        <% end %>
      </li>
    </div>
  </header>
  
  <div class="main">
    <div class="main_about">
      <p>We help people maintain their rental homes</p>
      <p>Automatatic airfilter delivery for all of your rental homes</p>
      <div class="main_button">
        <%= form_for(:anything, url: 'users/new', method: :get ) do |f| %>
          <%= f.submit "Create Account", class: "btn btn-secondary" %>
        <% end %>
      </div>
    </div>
    <div class="main_pic">
      <%= image_tag("peace.jpg",:width=>"100%", :class=>"img")%>
    </div>
  </div>
</body>
